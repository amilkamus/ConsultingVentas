@model Web.Models.Cotizacion.CotizacionViewModelOut

@{ ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml"; }

@section Scripts{
    <script src=@Url.Content("~/Scripts/js/angular/controller/cotizacion/cotizacionController.js")></script>
}

@{ var listaProductos = (from d in Model.Detalles
                          select d.producto).ToList().Distinct(); }
<style type="text/css">
    th {
        padding: 5px;
        text-align: center;
    }

    td {
        padding: 5px
    }

