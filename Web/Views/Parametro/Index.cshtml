@model IEnumerable<Web.Models.Parametro.Parametro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">MÓDULO DE PARÁMETROS</h3>
        </div>
        <!-- BODY -->
        <div class="box-body">
            <div ng-controller="documentoController" ng-cloak>
                <div class="table-responsive">
                    <div class="input-small formulario-mediano col-md-7 table-options">
                        <p>
                            @Html.ActionLink("Crear Nuevo Parámetro", "Create", null, new { @class = "btn btn-sm btn-primary" })
                        </p>
                    </div>

                    <table dt-options="dtOptions" dt-column-defs="elementos.dtColumnDefs" class="row-border hover table table-striped table-bordered tabla-bandeja">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CodParametro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ParametroDescripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Metodologia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Precio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>Opciones</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodParametro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParametroDescripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Metodologia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Precio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td class="right">
                                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit btn btn-xs btn-warning" })
                                    @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "glyphicon glyphicon-eye-open btn btn-sm btn-primary" })
                                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash btn btn-xs btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>


                </div>
            </div>
        </div>
    </div>
</section>
