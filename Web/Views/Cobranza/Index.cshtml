@model Entidad.EnCobranzaIn

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section scripts{
    <script src=@Url.Content("~/Scripts/js/angular/controller/documento/documentoController.js")></script>
}

<style type="text/css">
    th {
        padding: 5px;
        text-align: center;
    }

    td {
        padding: 5px
    }

    .modalDetalle {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content/Box */
    .modalDetalle-content {
        background-color: #fefefe;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 30%; /* Could be more or less, depending on screen size */
    }

    /* The Close Button */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">MÓDULO DE ÓRDENES DE SERVICIO</h3>
        </div>
        <!-- BODY -->
        <div class="box-body">
            <div ng-controller="documentoController" ng-cloak>
                <div class="table-responsive">

                    @using (Html.BeginForm("Exportar", "Cobranza", FormMethod.Post))
                    {
                        <div class="input-small formulario-mediano col-md-12 table-options form-horizontal">
                            <div class="form-group">
                                <!--label for="NumeroOrdenServicio" class="control-label col-md-2">Número orden servicio:</!--label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="NumeroOrdenServicio" name="NumeroOrdenServicio" ng-model="model.NumeroOrdenServicio" />
                                </div-->
                                <label for="NumeroCotizacion" class="control-label col-md-2">Número cotización:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="NumeroCotizacion" name="NumeroCotizacion" ng-model="model.NumeroCotizacion" />
                                </div>
                                <label for="SerieNumero" class="control-label col-md-2">Factura:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="SerieNumero" name="SerieNumero" ng-model="model.SerieNumero" />
                                </div>
                                <label for="FechaInicio" class="control-label col-md-2">Fecha de inicio:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control txtFecha" id="FechaInicio" name="FechaInicio" ng-model="model.FechaInicio" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="RucSolicitante" class="control-label col-md-2">Ruc Solicitante:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="RucSolicitante" name="RucSolicitante" ng-model="model.RucSolicitante" />
                                </div>
                                <label for="NombreSolicitante" class="control-label col-md-2">Razón Social:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="NombreSolicitante" name="NombreSolicitante" ng-model="model.NombreSolicitante" />
                                </div>
                                <!--label for="NombreContacto" class="control-label col-md-2">Nombre Contacto:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="NombreContacto" name="NombreContacto" ng-model="model.NombreContacto" />
                                </div-->
                                <label for="FechaFin" class="control-label col-md-2">Fecha de fin:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control txtFecha" id="FechaFin" name="FechaFin" ng-model="model.FechaFin" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <!--label for="DescripcionProducto" class="control-label col-md-2">Descripcion Producto:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="DescripcionProducto" name="DescripcionProducto" ng-model="model.DescripcionProducto" />
                                </div-->
                                <label for="ObservacionesProducto" class="control-label col-md-2">Observaciones:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="ObservacionesProducto" name="ObservacionesProducto" ng-model="model.ObservacionesProducto" />
                                </div>
                                <label for="IdUsuarioRegistro" class="control-label col-md-2">Usuario Registro:</label>
                                <div class="col-md-2">
                                    <select id="TipoCotizacion" name="TipoCotizacion" class="select2 form-control" ng-model="model.IdUsuarioRegistro">
                                        <option value="0">Todos</option>
                                        <option ng-repeat="item in elementosUsuario.lista" value="{{item.ID}}">{{item.Nombre}}</option>
                                    </select>
                                </div>
                            </div>
                            <!--div class="form-group">
                                <label for="FechaInicio" class="control-label col-md-2">Fecha de inicio:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control txtFecha" id="FechaInicio" name="FechaInicio" ng-model="model.FechaInicio" readonly />
                                </div>
                                <label for="FechaFin" class="control-label col-md-2">Fecha de fin:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control txtFecha" id="FechaFin" name="FechaFin" ng-model="model.FechaFin" readonly />
                                </div>
                            </div-->
                            <div class="form-group">
                                <div class="col-md-10"></div>
                                <div class="col-md-1">
                                    <a id="btnBuscarComprobantes" class="btn btn-sm btn-primary" ng-click="listarCobranzas()">BUSCAR</a>
                                </div>
                                <div class="col-md-1">
                                    <input type="submit" class="btn btn-sm btn-primary" value="EXPORTAR" />
                                </div>
                            </div>
                        </div>
                    }

                    <table id="tabla-comprobante" datatable="ng" dt-options="dtOptions" dt-column-defs="elementos.dtColumnDefs" class="row-border hover table table-bordered table-striped tabla-bandeja">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Fecha doc</th>
                                <th>Factura</th>
                                <th>Número de cotización</th>
                                <th>Razón Social</th>
                                <th>Condición de pago 1</th>
                                <th>Condición de pago 2</th>
                                <th>Monto</th>
                                <th>Pago1</th>
                                <th>Pago2</th>
                                <th>Pago3</th>
                                <th>Detracción</th>
                                <th>Saldo</th>
                                <th>Observaciones</th>
                                <th>N° Operación</th>
                                <th>Código Interno</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in elementosCobranza.lista">
                                <td><a class="glyphicon glyphicon-edit btn btn-xs btn-warning" href="~/Cotizacion/Payment/{{item.IdCotizacion}}"></a></td>
                                <td>{{item.FechaIngreso}}</td>
                                <td>{{item.SerieNumero}}</td>
                                <td>{{item.NumeroCotizacion}}</td>
                                <td>{{item.Solicitante}}</td>
                                <td>{{item.CondicionPago_1}}</td>
                                <td>{{item.CondicionPago_2}}</td>
                                <td>{{item.Total}}</td>
                                <td>{{item.Importe1}}</td>
                                <td>{{item.Importe2}}</td>
                                <td>{{item.Importe3}}</td>
                                <td>{{item.Detraccion}}</td>
                                <td>{{item.Saldo}}</td>
                                <td>{{item.Observacion1}}</td>
                                <td>{{item.NroOperacion}}</td>
                                <td>{{item.CodigoInterno}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal" class="modalDetalle">
        <div class="modalDetalle-content">
            <span class="close">&times;</span>
            <p>Cargando información...</p>
        </div>
    </div>
</section>