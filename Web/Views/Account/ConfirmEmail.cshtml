@{
    ViewBag.Title = "Confirmar correo electrónico";
}

<div class="row">
    <div class="col-md-offset-4 col-md-8">
        <div class="well well-edit col-md-4">
            <a><img src="~/Content/dist/img/logo.png" class="img-edit" /></a>
            <br />
            <br />
            <h4 style="text-align:center">CONFIRMACION DE CORREO ELECTRÓNICO</h4>
            <hr />
            <div class="col-md-12">
                <div class="form-group">
                    <div class="callout callout-success" style="text-align: center">
                        <h4>Correo Confirmado!</h4>
                        <p>Gracias por confirmar tu email. Por favor @Html.ActionLink("haga clic aquí para iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>