@model Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restableces Contraseña";
}

<div class="row">
    <div class="col-md-offset-4 col-md-8">
        <div class="well well-edit col-md-4">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                
                <a><img src="~/Content/dist/img/logo.png" class="img-edit" /></a>
                <br />
                <br />
                <h4 style="text-align: center">RESTABLECER SU CONTRASEÑA</h4>
                <hr />
                <div class="form-group">
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                    <span class="fa fa-envelope col-md-2 control-label "></span>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingrese Email" })
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                    <span class="fa fa-key col-md-2 control-label "></span>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese Contraseña" })
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                    <span class="fa fa-key col-md-2 control-label "></span>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" class="btn btn-primary" value="Restaurar" />
                    </div>
                </div>
            }            
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
