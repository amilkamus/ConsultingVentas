@model Web.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section scripts{
    <script src=@Url.Content("~/Scripts/js/angular/controller/admin/adminController.js")></script>
}

<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">CREAR ROL</h3>
        </div>
        <!--body -->
        <div class="box-body">
            <div ng-controller="rolController" class="col-md-12 formulario-mediano">
                <div class="form-horizontal col-md-12">
                    <br />
                    <form name="rol" ng-cloak>
                        <div class="form-group col-md-12">
                            <label class="control-label col-md-3">Rol</label>
                            <div class="col-md-6">
                                <input class="form-control lowercase padding-left-right-3" placeholder="Ingrese Rol" ng-model="model.Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <a class="btn btn-sm btn-primary" ng-click="guardarRol()">GUARDAR</a>
                                @Html.ActionLink("CANCELAR", "Index", null, new { @class = "btn btn-sm btn-danger cancelar" })
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
</section>

