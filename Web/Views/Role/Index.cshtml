@{
    ViewBag.Title = "Bandeja de Roles";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section scripts{
    <script src=@Url.Content("~/Scripts/js/angular/controller/admin/adminController.js")></script>
}

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">BANDEJA DE ROLES</h3>
        </div>
        <!-- BODY -->
        <div class="box-body">
            <div ng-controller="rolController" ng-cloak>
                <div class="table-responsive">
                    <div class="input-small formulario-mediano col-md-7 table-options">
                        @Html.ActionLink("NUEVO ROL", "Create", null, new { @class = "btn btn-sm btn-primary" })
                    </div>
                    <!-- TABLA -->
                    <table id="tablacorreos" datatable="ng" dt-options="dtOptions" dt-column-defs="elementos.dtColumnDefs" class="row-border hover table table-striped table-bordered tabla-bandeja display">
                        <thead>
                            <tr>
                                <th>Rol</th>
                                <th>ACCI&Oacute;N</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in elementos.lista" ng-cloak class="lowercase">
                                <td>{{item.Name}}</td>
                                <td class="right">
                                    <a title="Editar Rol" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#modal-editarRol" ng-click="editarRol(item)"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a title="Eliminar Rol" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#modal-eliminarRol" ng-click="cargarModal(item)"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- MODAL ELIMINAR -->
                <div id="modal-eliminarRol" class="modal fade" tabindex="-1" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a class="close" data-dismiss="modal">&times;</a>
                                <h4 class="modal-title"> Eliminar Rol</h4>
                            </div>
                            <div class="modal-body">
                                <p> Esta seguro de eliminar este Rol?</p>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-primary" data-dismiss="modal" ng-click="eliminarRol()">Aceptar</a>
                                <a class="btn btn-danger" data-dismiss="modal">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- MODAL EDITAR -->
                <div id="modal-editarRol" class="modal fade" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a class="close" data-dismiss="modal">&times;</a>
                                <h4 class="modal-title"> Editar Rol</h4>
                            </div>
                            <div class="modal-body">
                                <div class="container" style="width:auto">
                                    <br />
                                    <form name="rol" class="form-horizontal" ng-cloak>
                                        <div class="form-group col-md-12">
                                            <label class="control-label col-md-3">Rol</label>
                                            <div class="col-md-6">
                                                <input class="form-control lowercase padding-left-right-3" ng-model="model.Name" required/>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-sm btn-primary" ng-click="guardarRol()">GUARDAR</a>
                                @Html.ActionLink("CANCELAR", "Index", null, new { @class = "btn btn-sm btn-danger cancelar" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
</section>